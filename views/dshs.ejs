	<script src="js/newstudent.js"></script>
	<script>
	$(document).ready(function () {
		var xemThemBtn = $(".xemthem-btn");
		$(xemThemBtn).click(function (e) { 
				var maHocSinh = $(this).attr("data-maso");
				var data = {
					maHocSinh: maHocSinh
				}
				$.ajax({
					type: "POST",
					url: "/student",
					data: data,
					dataType: "html",
					success: function (response) {
						$(".replace-area").replaceWith(response);
					}
				});
		});
	});
	</script>

</body>
