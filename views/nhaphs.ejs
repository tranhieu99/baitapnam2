    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form class="form-horizontal" method="", action="" enctype="multipart/form-data">
                    <fieldset>
                        <legend class="text-center header">Nhập thông tin học sinh</legend>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="tenhocsinh" name="tenhocsinh" type="text" placeholder="Họ tên học sinh" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-transgender bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="gioitinh" name="gioitinh" type="text" placeholder="Giới tính" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-calendar bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="ngaysinh" name="ngaysinh" type="date" placeholder="Ngày sinh" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-address-book bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="diachi" name="diachi" type="text" placeholder="Địa chỉ" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="sohocsinh" name="sohocsinh" type="text" placeholder="Số điện thoại học sinh" class="form-control">
                            </div>
                        </div>
						<div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="sophuhuynh" name="sophuhuynh" type="text" placeholder="Số điện thoại phụ huynh" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-graduation-cap bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="malop" name="malop" type="text" placeholder="Mã lớp" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-sticky-note bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="ghichu" name="ghichu" type="text" placeholder="Ghi chú" class="form-control">
                            </div>
						</div>
					
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="button" class="btn btn-primary btn-lg themhs">Xác nhận</button>
