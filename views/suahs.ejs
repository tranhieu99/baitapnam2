    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form class="form-horizontal" method="", action="">
                    <fieldset>
                        <legend class="text-center header" >Sửa thông tin học sinh <%= data.print[0].TenHocSinh %> </legend>
                            <input type="hidden" name="idhocsinh" value="<%= data.print[0].MaHocSinh %>">
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="tenhocsinh" name="tenhocsinh" type="text" placeholder="Họ tên học sinh" class="form-control" value="<%= data.print[0].TenHocSinh %>">
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-transgender bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="gioitinh" name="gioitinh" type="text" placeholder="Giới tính" class="form-control" value="<%= data.print[0].GioiTinh %>" >
                            </div>
                        </div>

                        

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-address-book bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="diachi" name="diachi" type="text" placeholder="Địa chỉ" class="form-control" value="<%= data.print[0].DiaChi %>" >
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="sohocsinh" name="sohocsinh" type="text" placeholder="Số điện thoại học sinh" class="form-control" value="<%= data.print[0].Sdt %>" >
                            </div>
                        </div>
						<div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="sophuhuynh" name="sophuhuynh" type="text" placeholder="Số điện thoại phụ huynh" class="form-control" value="<%= data.print[0].SdtPhuHuynh %>" >
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-graduation-cap bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="malop" name="malop" type="text" placeholder="Mã lớp" class="form-control" value="<%= data.print[0].MaLop %>" > 
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-sticky-note bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="ghichu" name="ghichu" type="text" placeholder="Ghi chú" class="form-control" value="<%= data.print[0].GhiChu %>" >
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="button" class="btn btn-primary btn-lg suahs">Xác nhận</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
